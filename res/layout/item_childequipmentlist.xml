<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="@drawable/broder" 
        android:paddingLeft="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="11dp"
        android:orientation="vertical" >

                <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">

          <TextView 
              android:id="@+id/channel_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp" 
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="13dp"
        android:gravity="center_vertical"
        android:text="电机1"
        android:textColor="@color/item_graytext"
        android:textSize="16dp"/>
          <TextView 
              android:id="@+id/status_tv1"
        android:layout_width="60dp"
        android:layout_height="30dp" 
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:background="@drawable/broder_orange"
        android:text="打开"
        android:textColor="@color/white"
        android:textSize="16dp"/>
                  <TextView 
              android:id="@+id/status_tv2"
        android:layout_width="60dp"
        android:layout_height="30dp" 
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12dp"
        android:gravity="center"
        android:background="@drawable/broder_graylabel"
        android:text="关闭"
        android:textColor="@color/item_graytext"
        android:textSize="16dp"/>
                          <TextView 
              android:id="@+id/status_tv3"
        android:layout_width="60dp"
        android:layout_height="30dp" 
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12dp"
        android:gravity="center"
        android:background="@drawable/broder_graylabel"
        android:text="停止"
        android:textColor="@color/item_graytext"
        android:textSize="16dp"/>
          </LinearLayout>

</LinearLayout>