<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical">
<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="来源"
    android:textSize="14dp"
    android:layout_marginTop="16dp"
    android:textColor="@color/item_graytext"/>
<TextView 
    android:id="@+id/cropname_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="请选择来源"
    android:textSize="14dp"
    android:layout_marginTop="8dp"
    android:textColor="@color/gray_text5"/>
<View 
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_marginTop="8dp"
    android:background="@color/gray_line"/>
<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="参数"
    android:textSize="14dp"
    android:layout_marginTop="14dp"
    android:textColor="@color/item_graytext"/>
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView 
        android:id="@+id/cropstandard_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="请选择参数"
    android:textSize="14dp"
    android:layout_marginTop="8dp"
    android:textColor="@color/gray_text5"/>
    <ImageView 
        android:layout_width="20dp"
        android:layout_height="14dp"
        android:background="@drawable/up2"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/cropstandard_tv"
        android:layout_marginRight="24dp"/>
</RelativeLayout>
<View 
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_marginTop="8dp"
    android:background="@color/gray_line"/>
<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="条件"
    android:textSize="14dp"
    android:layout_marginTop="14dp"
    android:textColor="@color/item_graytext"/>
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView 
        android:id="@+id/cropenvironment_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="高于"
    android:textSize="14dp"
    android:layout_marginTop="8dp"
    android:textColor="@color/item_graytext"/>
    <ImageView 
        android:layout_width="20dp"
        android:layout_height="14dp"
        android:background="@drawable/up2"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/cropenvironment_tv"
        android:layout_marginRight="24dp"/>
</RelativeLayout>
<View 
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_marginTop="8dp"
    android:background="@color/gray_line"/>
<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="数值"
    android:textSize="14dp"
    android:layout_marginTop="16dp"
    android:textColor="@color/item_graytext"/>
<TextView 
    android:id="@+id/value_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="请输入条件生效的环境数值"
    android:textSize="14dp"
    android:layout_marginTop="8dp"
    android:textColor="@color/gray_text5"/>
<View 
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_marginTop="8dp"
    android:background="@color/gray_line"/>
<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:text="有效时间"
    android:textColor="@color/item_graytext"
    android:textSize="14dp"/>

<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:layout_marginTop="8dp">
   <View 
       android:id="@+id/center_line"
       android:layout_width="16dp"
       android:layout_height="2dp"
       android:layout_centerInParent="true"
       android:background="@color/gray_line3"/>
    
   <EditText
            android:id="@+id/timestart_edit"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/center_line"
            android:layout_marginRight="11dp"
            android:background="@color/white"
            android:hint="07:00"
            android:paddingLeft="11dp"
            android:inputType="textNoSuggestions"
            android:singleLine="true"
            android:textColor="@color/item_graytext"
            android:textColorHint="@color/item_graytext"
            android:textSize="14dp" />
   <EditText
            android:id="@+id/timeend_edit"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/center_line"
            android:layout_marginLeft="11dp"
            android:background="@color/white"
            android:hint="18:59"
            android:paddingLeft="15dp"
            android:inputType="textNoSuggestions"
            android:singleLine="true"
            android:textColor="@color/item_graytext"
            android:textColorHint="@color/item_graytext"
            android:textSize="14dp" />
</RelativeLayout>
<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="持续时间（分钟）"
    android:textSize="14dp"
    android:layout_marginTop="16dp"
    android:textColor="@color/item_graytext"/>
<TextView 
    android:id="@+id/time_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="请输入持续时间"
    android:textSize="14dp"
    android:layout_marginTop="8dp"
    android:textColor="@color/gray_text5"/>
<View 
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_marginTop="8dp"
    android:background="@color/gray_line"/>
</LinearLayout>