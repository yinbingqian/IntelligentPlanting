<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/green_top"
        android:orientation="vertical" >
       

      <TextView
          android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:singleLine="true"
            android:layout_marginLeft="20dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="快速注册"
            android:textColor="@color/white"
            android:textSize="18dp"/>
    </RelativeLayout>
        
        
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:gravity="center_vertical"
        android:background="@color/white">

		<ImageView
            android:id="@+id/phone_img"
            android:layout_width="18dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:src="@drawable/phone" />
        <EditText
            android:id="@+id/phone_edit"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/phone_img"
            android:layout_marginLeft="10dp"
            android:hint="请输入手机号"
            android:textColorHint="#b3b3b3"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@color/gray_text5"
            android:textSize="16dp" 
            android:inputType="textNoSuggestions"/>
        

    </RelativeLayout>
            <View 
            android:id="@+id/line2"
            android:background="@color/gray_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
            />
    

       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:background="@color/white" 
        android:visibility="gone">
 		<ImageView
            android:id="@+id/code_img"
            android:layout_width="18dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/code" />
<Button
        	    android:id="@+id/code_btn"
        	    android:layout_width="106dp"
        	    android:layout_height="30dp"
        	    android:layout_centerVertical="true"
        	    android:layout_alignParentRight="true"
        	    android:text="发送验证码"
        	    android:textSize="16dp"
        	    android:textColor="@color/white"
        	    android:background="@drawable/broder_green"/>
        <EditText
            android:id="@+id/code_edit"
            android:layout_centerVertical="true"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/code_img"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/code_btn"
            android:hint="请输入验证码"
            android:textColorHint="#b3b3b3"
            android:background="@null"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/gray_text5"
            android:textSize="17sp" />
        	
   
    </RelativeLayout>

            <View 
            android:background="@color/gray_line"
            android:layout_width="195dp"
            android:layout_height="1dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:visibility="gone"
            />
               <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp">
<ImageView
            android:id="@+id/password_img"
            android:layout_width="18dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/password3" />
		
        <EditText
            android:id="@+id/password_edit"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/password_img"
            android:layout_marginLeft="7dp"
            android:hint="请输入6位以上密码"
            android:textColorHint="#b3b3b3"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@color/gray_text5"
            android:textSize="17sp" 
            android:inputType="textNoSuggestions"/>
        

    </RelativeLayout>
     <View 
            android:background="@color/gray_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
            />
    <Button
            android:id="@+id/reg_bt"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/broder_green"
            android:gravity="center"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="16dp" />
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal" >


        
        
        <ProgressBar
        android:id="@+id/login_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:indeterminateDrawable="@anim/progressbar"
        android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
