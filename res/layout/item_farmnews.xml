<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" 
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal" >
       <ImageView 
           android:id="@+id/photo_img"
         android:layout_width="80dp"
         android:layout_height="60dp"
         android:background="@drawable/zuowuimg" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" >

            <TextView
                android:id="@+id/news_tv"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="互联网企业加快布局 科技农业商业应用提速"
                android:textColor="@color/item_graytext"
                android:textSize="16dp" />
<TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/news_tv"
                android:layout_marginTop="3dp"
                android:text="2小时前"
                android:textColor="@color/cal_line_grey"
                android:textSize="12dp" />
<TextView
                android:id="@+id/count_tv"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_alignBottom="@+id/time_tv"
                android:layout_alignParentRight="true"
                android:text="143"
                android:textColor="@color/cal_line_grey"
                android:textSize="12dp" />

               <RelativeLayout 
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignBottom="@+id/time_tv"
                android:layout_toLeftOf="@+id/count_tv"
                android:layout_marginRight="3dp"
                android:gravity="center">
<ImageView
                android:id="@+id/datetime_tv"
                android:layout_width="16dp"
                android:layout_height="11dp"
                android:background="@drawable/read" />
</RelativeLayout>
            </RelativeLayout>

    </LinearLayout>
    </RelativeLayout>
