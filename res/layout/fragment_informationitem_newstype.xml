<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout 
    android:id="@+id/top_layout"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:orientation="horizontal">
    <LinearLayout 
        android:id="@+id/vegetables_layout"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView 
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/vegetables"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:text="蔬菜"
            android:textSize="13sp"
            android:textColor="@color/item_graytext3"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/fruit_layout"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView 
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/fruit_icon"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:text="水果"
            android:textSize="13sp"
            android:textColor="@color/item_graytext3"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/grain_layout"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView 
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/grain"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:text="粮油作物"
            android:textSize="13sp"
            android:textColor="@color/item_graytext3"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/seedling_layout"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView 
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/seedling"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:text="种苗"
            android:textSize="13sp"
            android:textColor="@color/item_graytext3"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/more_layout"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView 
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/moremore"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:text="更多"
            android:textSize="13sp"
            android:textColor="@color/item_graytext3"/>
    </LinearLayout>
</LinearLayout>
    <com.lnpdit.woofarm.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/listView_farmnewslist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_layout"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="#00000000"
        android:smoothScrollbar="true" />

</RelativeLayout>