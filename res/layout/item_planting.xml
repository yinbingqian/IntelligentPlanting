<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >


<RelativeLayout 
    android:id="@+id/top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="16dp">
            <TextView 
                android:id="@+id/pengname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="2号棚"
        android:textColor="@color/item_graytext"
        android:textSize="16dp"/>
            
            <TextView 
                android:id="@+id/endplant_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_alignParentRight="true"
        android:text="结束种植"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:background="@drawable/broder_greentextbg"/>

        </RelativeLayout>
      <LinearLayout 
        android:id="@+id/crop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layout"
        android:orientation="vertical">
                    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="16dp"
        android:background="@color/gran_line3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="11dp"
        android:paddingTop="12dp"
        android:orientation="horizontal" >
       <ImageView 
           android:id="@+id/photo_img"
         android:layout_width="64dp"
         android:layout_height="64dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/zuowu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="种植作物"
                android:textColor="@color/item_graytext"
                android:textSize="14dp" />

<TextView
                android:id="@+id/plant_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/zuowu_tv"
                android:layout_alignBottom="@+id/zuowu_tv"
                android:layout_marginLeft="30dp"
                android:text="黄瓜"
                android:textColor="@color/gray_text8"
                android:textSize="14dp" />
<TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zuowu_tv"
                android:layout_marginTop="1dp"
                android:text="定值时间"
                android:textColor="@color/item_graytext"
                android:textSize="14dp" />
<TextView
                android:id="@+id/datetime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/time_tv"
                android:layout_alignBottom="@+id/time_tv"
                android:layout_marginLeft="30dp"
                android:text="2018-04-01"
                android:textColor="@color/gray_text8"
                android:textSize="14dp" />
<TextView
                android:id="@+id/endtime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_tv"
                android:layout_marginTop="1dp"
                android:text="结束时间"
                android:textColor="@color/item_graytext"
                android:textSize="14dp" />
<TextView
                android:id="@+id/enddatetime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/endtime_tv"
                android:layout_alignBottom="@+id/endtime_tv"
                android:layout_marginLeft="30dp"
                android:text="2018-04-01"
                android:textColor="@color/gray_text8"
                android:textSize="14dp" />
            </RelativeLayout>

    </LinearLayout>

<RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="13dp">
        
               <TextView
                android:id="@+id/grey_line_view"
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:background="@drawable/broder_gray"/>
            <TextView
                android:id="@+id/orange_line_view"
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:background="@drawable/broder_orange"/>

            <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="13dp"
        android:text="生长周期"
        android:textColor="@color/item_graytext"
        android:textSize="14dp"
        android:layout_below="@+id/plantingline_view"/>
            
            <TextView 
                android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:text="已定值25天"
        android:textColor="@color/item_graytext"
        android:textSize="14dp"
        android:layout_below="@+id/plantingline_view"/>
    
        </RelativeLayout>
                </LinearLayout>
    <TextView 
        android:id="@+id/uncrop_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/top_layout"
        android:text="该地块还没有添加种植，可在后台添加种植信息"
        android:textColor="@color/gray_text5"
        android:textSize="14dp"
        android:visibility="gone"/>
</RelativeLayout>