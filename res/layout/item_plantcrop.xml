<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="360dp" 
        android:layout_height="wrap_content"
        android:background="@color/white"
    android:paddingBottom="8dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="13dp"
        android:orientation="horizontal" >


        <View 
        android:layout_width="5dp" 
        android:layout_height="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/green_icon"
          />
        <TextView 
            android:id="@+id/peng_name"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:text="丹东网红草莓大棚"
        android:textColor="#ff282828"
        android:textSize="15sp"
           />

    </LinearLayout>
    <View 
         android:layout_width="360dp" 
         android:layout_height="1dp"
         android:background="#ffe6e6e6"
        />
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <ImageView 
            android:id="@+id/plant_img"
        android:layout_width="160dp" 
       android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
       android:src="@drawable/default_bg"
          />
        <TextView 
            android:id="@+id/text1_tv"
       android:layout_width="wrap_content" 
       android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/plant_img"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="11dp"
       android:text="当前阶段："
       android:textColor="#ff282828"
       android:textSize="13sp"
       />
                <TextView 
                    android:id="@+id/currentstage_tv"
       android:layout_width="wrap_content" 
       android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/text1_tv"
       android:layout_marginTop="11dp"
       android:text="幼苗期"
       android:textColor="#E91E63"
       android:textSize="13sp"
       />
                <TextView 
                    android:id="@+id/text2_tv"
android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:layout_marginTop="10dp"
android:layout_alignLeft="@+id/text1_tv"
android:layout_below="@+id/text1_tv"
android:text="种植周期："
android:textColor="#ff282828"
android:textSize="13sp"
/>
                
            <TextView 
                android:id="@+id/plantdays_tv"
android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:layout_alignBottom="@+id/text2_tv"
android:layout_toRightOf="@+id/text2_tv"
android:text="101天"
android:textColor="#ff282828"
android:textSize="13sp"
/>
            
              <TextView 
                    android:id="@+id/text3_tv"
android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:layout_marginTop="10dp"
android:layout_alignLeft="@+id/text1_tv"
android:layout_below="@+id/text2_tv"
android:text="距离上市："
android:textColor="#ff282828"
android:textSize="13sp"
/>
                
            <TextView 
                android:id="@+id/timetomarket_tv"
android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:layout_alignBottom="@+id/text3_tv"
android:layout_toRightOf="@+id/text3_tv"
android:text="上市中"
android:textColor="#0A8F08"
android:textSize="13sp"
/>
            <TextView 
                    android:id="@+id/text4_tv"
android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:layout_marginTop="10dp"
android:layout_alignLeft="@+id/text1_tv"
android:layout_below="@+id/text3_tv"
android:text="种植规模："
android:textColor="#ff282828"
android:textSize="13sp"
/>
                
            <TextView 
                android:id="@+id/yield_tv"
android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:layout_alignBottom="@+id/text4_tv"
android:layout_toRightOf="@+id/text4_tv"
android:text="约5000斤"
android:textColor="#ff282828"
android:textSize="13sp"
/>

    </RelativeLayout>
    
</LinearLayout>