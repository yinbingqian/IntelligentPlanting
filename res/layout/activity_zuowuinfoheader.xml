                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/soilph_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/soilph_icon_text"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="@color/item_graytext3"
                        android:textSize="14dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:layout_weight="1" 
                    android:gravity="center_horizontal">

                     <ImageView
                        android:id="@+id/ec_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ec"/>

                    <TextView
                        android:id="@+id/ec_icon_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ec_btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="6dp"
                        android:text="EC值"
                        android:textColor="@color/item_graytext3"
                        android:textSize="13dp" />
                    <TextView
                        android:id="@+id/ec_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/ec_icon_text"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="@color/item_graytext3"
                        android:textSize="14dp" />
