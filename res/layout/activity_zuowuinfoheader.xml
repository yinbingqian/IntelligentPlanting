            </LinearLayout>
            
<View 
    android:layout_width="fill_parent"
    android:layout_height="10dp"
    android:background="@color/white"/>
        </LinearLayout>
<View 
    android:layout_width="fill_parent"
    android:layout_height="10dp"
    android:background="@color/graysearchs_bg"/>

</LinearLayout>