<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:background="@color/green_top"
        android:orientation="vertical" >
<TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="添加种植"
            android:textColor="@color/white"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/submit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="执行设备"
    android:textSize="14dp"
    android:layout_marginTop="14dp"
    android:textColor="@color/item_graytext"/>
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView 
        android:id="@+id/cropstandard_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="请选择设备"
    android:textSize="14dp"
    android:layout_marginTop="8dp"
    android:textColor="@color/gray_text5"/>
    <ImageView 
        android:layout_width="20dp"
        android:layout_height="14dp"
        android:background="@drawable/up2"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/cropstandard_tv"
        android:layout_marginRight="24dp"/>
</RelativeLayout>
<View 
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_marginTop="8dp"
    android:background="@color/gray_line"/>
<TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="执行设备"
    android:textSize="14dp"
    android:layout_marginTop="14dp"
    android:textColor="@color/item_graytext"/>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
    <TextView 
        android:layout_width="68dp"
        android:layout_height="30dp"
        android:layout_marginLeft="9dp"
        android:text="打开"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="14dp"
        android:background="@drawable/broder_orange"/>
        <TextView 
        android:layout_width="68dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:text="关闭"
        android:textColor="@color/item_graytext"
        android:gravity="center"
        android:textSize="14dp"/>
</LinearLayout>
</LinearLayout>
</LinearLayout>