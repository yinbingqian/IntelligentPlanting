<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
<RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:background="@color/green_top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="农技服务"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>
    
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专家问答"
            android:textColor="@color/item_graytext"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>    
        <TextView 
            android:layout_width="65dp"
            android:layout_height="18dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/rectangle2"/>
    </LinearLayout>
    <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每天30000个问题被专家解答"
            android:textColor="@color/gray_text5"
            android:textSize="14dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:orientation="horizontal"
        >
        
        <ImageView 
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/group5"/>    
        <ImageView 
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/group4"/>
        <ImageView 
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/group2"/>
        <ImageView 
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/group1"/>
        <ImageView 
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/group3"/>
        <ImageView 
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/group2"/>
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:background="@color/gray_bg2"
        android:layout_marginTop="15dp"/>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="44dp">
        <ImageView 
            android:id="@+id/allanswer_img"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/allanswer"
            android:layout_centerVertical="true"
            android:layout_marginLeft="38dp"/>
                <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/allanswer_img"
            android:text="全部问答"
            android:textSize="16dp"
            android:textColor="@color/item_graytext"/>
                        <View 
            android:layout_width="1dp"
            android:layout_height="23dp"
            android:layout_centerInParent="true"
            android:background="@color/gray_line5"/>
           <TextView 
               android:id="@+id/myanswer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="38dp"
            android:text="我的问答"
            android:textSize="16dp"
            android:textColor="@color/item_graytext"/>
        
             <ImageView 
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/myanswer"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/myanswer_tv"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:background="@color/gray_bg2"/>
        <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp">
           
                <TextView 
                    android:id="@+id/nongshi_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="农事百科"
            android:textSize="18dp"
            android:textColor="@color/green_text3"/>
                
        <View 
            android:layout_width="69dp"
            android:layout_height="1dp"
            android:background="@drawable/path"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/nongshi_tv"
            android:layout_marginLeft="3dp"/>

        <View 
            android:layout_width="69dp"
            android:layout_height="1dp"
            android:background="@drawable/path"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/nongshi_tv"
            android:layout_marginRight="3dp"/>

    </RelativeLayout>
     <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line5"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="14dp"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="276dp"
        android:orientation="horizontal">
      <RelativeLayout 
        android:layout_width="1dp"
        android:layout_weight="1"
        android:layout_height="fill_parent">
           
                <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="病害百科"
            android:textSize="16dp"
            android:textColor="@color/item_graytext"/>
     
                <ImageView 
            android:layout_width="183dp"
            android:layout_height="120dp"
            android:background="@drawable/img3"
            android:layout_marginTop="53dp"
            />
            <View 
                android:id="@+id/line3"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line5"
            android:layout_marginTop="174dp"
            />

        <ImageView 
            android:layout_width="116dp"
            android:layout_height="62dp"
            android:layout_below="@+id/line3"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/img2"/>
        
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/line3"
            android:text="豆科蔬菜病虫防治"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            android:textColor="@color/item_graytext"/>
    </RelativeLayout>
                
     <RelativeLayout 
        android:layout_width="1dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
           
                <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="土肥百科"
            android:textSize="16dp"
            android:textColor="@color/item_graytext"/>
     <ImageView 
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/img5"/>
       <View 
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/gray_line5"
            android:layout_alignParentLeft="true"
            />
         <View 
             android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line5"
            android:layout_marginTop="85dp"
            />
        <ImageView 
            android:layout_width="178dp"
            android:layout_height="78dp"
            android:layout_below="@+id/line1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9dp"
            android:background="@drawable/img4"/>
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/line1"
            android:text="科学管理生态茶园"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            android:textColor="@color/item_graytext"/>
   <View 
             android:id="@+id/line4"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line5"
            android:layout_marginTop="174dp"
            />
   
        <ImageView 
            android:id="@+id/text_img"
            android:layout_width="104dp"
            android:layout_height="62dp"
            android:layout_below="@+id/line4"
            android:layout_alignParentRight="true"
            android:layout_marginRight="9dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/img1"/>
        
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/line4"
            android:text="农药的使用技术"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            android:textColor="@color/item_graytext"/>
         <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line5"
            android:layout_below="@+id/text_img"
            />
    </RelativeLayout>
    </LinearLayout> 
</LinearLayout>
</LinearLayout>