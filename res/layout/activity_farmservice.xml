<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
<RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:background="@color/green_top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="农技服务"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>
    
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout 
        android:id="@+id/askexpert_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专家问答"
            android:textColor="@color/item_graytext"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>    
        <TextView 
            android:layout_width="65dp"
            android:layout_height="18dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/rectangle2"/>
    </LinearLayout>
    <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每天30000个问题被专家解答"
            android:textColor="@color/gray_text5"
            android:textSize="14dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:orientation="horizontal"
        >
        
        <ImageView 
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/group5"/>    
        <ImageView 
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/group4"/>
        <ImageView 
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/group2"/>
        <ImageView 
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/group1"/>
        <ImageView 
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/group3"/>
        <ImageView 
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/group2"/>
    </LinearLayout>
        </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:background="@color/gray_bg2"
        android:layout_marginTop="15dp"/>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="44dp">
        <ImageView 
            android:id="@+id/allanswer_img"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/allanswer"
            android:layout_centerVertical="true"
            android:layout_marginLeft="38dp"/>
                <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/allanswer_img"
            android:text="全部问答"
            android:textSize="16dp"
            android:textColor="@color/item_graytext"/>
                        <View 
            android:layout_width="1dp"
            android:layout_height="23dp"
            android:layout_centerInParent="true"
            android:background="@color/gray_line5"/>
           <TextView 
               android:id="@+id/myanswer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="38dp"
            android:text="我的问答"
            android:textSize="16dp"
            android:textColor="@color/item_graytext"/>
        
             <ImageView 
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/myanswer"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/myanswer_tv"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:background="@color/gray_bg2"/>
        <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp">
           
                <TextView 
                    android:id="@+id/nongshi_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="农事百科"
            android:textSize="18dp"
            android:textColor="@color/green_text3"/>
                
        <View 
            android:layout_width="69dp"
            android:layout_height="1dp"
            android:background="@drawable/path"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/nongshi_tv"
            android:layout_marginLeft="3dp"/>

        <View 
            android:layout_width="69dp"
            android:layout_height="1dp"
            android:background="@drawable/path"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/nongshi_tv"
            android:layout_marginRight="3dp"/>

    </RelativeLayout>
     <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line5"
        android:layout_marginTop="15dp"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="240dp"
        android:orientation="horizontal">
      <LinearLayout 
        android:layout_width="1dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:layout_marginTop="12dp"
        android:orientation="vertical">
           <RelativeLayout 
               android:id="@+id/cropdisease_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
                <TextView 
                    android:id="@+id/bing_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="病害百科"
            android:textSize="14dp"
            android:textColor="@color/item_graytext3"/>
     
                <ImageView 
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:background="@drawable/img3"
            android:layout_below="@+id/bing_tv"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            />
                </RelativeLayout>
            <View 
                android:id="@+id/line3"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line5"
            android:layout_marginTop="10dp"
            />
 <RelativeLayout 
               android:id="@+id/soil_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
            android:layout_marginTop="13dp">
         <TextView 
             android:id="@+id/soil_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="土壤百科"
            android:textSize="14dp"
            android:textColor="@color/item_graytext3"/>
        <ImageView 
            android:layout_width="75dp"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/soil_tv"
            android:layout_marginTop="7dp"
            android:background="@drawable/img5"/>
        </RelativeLayout>
            <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line5"
            android:layout_marginTop="11dp"
            />
    </LinearLayout>
                    <View 
                android:id="@+id/line7"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/gray_line5"
            />
      <LinearLayout 
        android:layout_width="1dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:layout_marginTop="12dp"
        android:orientation="vertical">
           <RelativeLayout 
               android:id="@+id/pesticide_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
                <TextView 
                    android:id="@+id/pesticide_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="农药使用技术"
            android:textSize="14dp"
            android:textColor="@color/item_graytext3"/>
     
                <ImageView 
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:background="@drawable/img1"
            android:layout_below="@+id/pesticide_tv"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            />
                </RelativeLayout>
            <View 
                android:id="@+id/line6"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line5"
            android:layout_marginTop="10dp"
            />
<RelativeLayout 
               android:id="@+id/plant_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
            android:layout_marginTop="13dp">
         <TextView 
             android:id="@+id/plant_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="科学种植"
            android:textSize="14dp"
            android:textColor="@color/item_graytext3"/>
        <ImageView 
            android:layout_width="75dp"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/plant_tv"
            android:layout_marginTop="7dp"
            android:background="@drawable/scientific_cultivation_pic"/>
            </RelativeLayout>
            <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line5"
            android:layout_marginTop="11dp"
            />
    </LinearLayout>
    </LinearLayout> 
</LinearLayout>
</LinearLayout>