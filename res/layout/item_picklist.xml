<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="40dp">

    <ImageView
        android:id="@+id/crop_img"
        android:layout_width="5dp"
        android:layout_height="12dp"
        android:background="@drawable/green_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"/>
            <TextView
                android:id="@+id/cropname_tv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@+id/crop_img"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="1号棚"
                android:textColor="@color/item_graytext3"
                android:textSize="15dp" />
</RelativeLayout>
<View 
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/gray_line2"/>
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <ImageView 
                android:id="@+id/pic_img"
                android:layout_width="160dp" 
                android:layout_height="120dp"
                android:layout_margin="10dp"
                />
                <TextView
                android:id="@+id/basename_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/pic_img"
                android:text="基地名称："
                android:textColor="@color/item_graytext3"
                android:textSize="14dp" />
                      <TextView
                android:id="@+id/pickname_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/pic_img"
                android:layout_below="@+id/basename_tv"
                android:text="采摘人员："
                android:textColor="@color/item_graytext3"
                android:textSize="14dp" />
                            <TextView
                android:id="@+id/pickcount_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/pic_img"
                android:layout_below="@+id/pickname_tv"
                android:text="采摘数量："
                android:textColor="@color/item_graytext3"
                android:textSize="14dp" />
                                        <TextView
                android:id="@+id/pickdate_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/pic_img"
                android:layout_below="@+id/pickcount_tv"
                android:text="采摘时间："
                android:textColor="@color/item_graytext3"
                android:textSize="14dp" />
            </RelativeLayout>
            <View 
                android:layout_width="fill_parent"
                android:layout_height="10dp"/>
</LinearLayout>