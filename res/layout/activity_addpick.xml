<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg2"
    android:orientation="vertical">
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:background="@color/green_top"
        android:orientation="vertical" >
<TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="添加采摘"
            android:textColor="@color/white"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/save_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>
      <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="采摘作物:"
        android:textColor="@color/item_graytext3"
        android:textSize="14sp"/>
    <TextView 
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:background="@drawable/dian"/>
</LinearLayout>
<RelativeLayout 
    android:layout_width="340dp"
    android:layout_height="45dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical">

    <Spinner
        android:id="@+id/pickcrop_sp"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/spinner_long_bg"
        android:hint="请选择采摘作物"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:popupBackground="@color/white"
        android:spinnerMode="dropdown"
        android:textColor="@color/item_graytext3"
        android:textSize="13sp" />

</RelativeLayout>

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="采摘人员/时间:"
        android:textColor="@color/item_graytext3"
        android:textSize="14sp"/>
    <TextView 
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:background="@drawable/dian"/>
</LinearLayout>
<RelativeLayout 
    android:layout_width="340dp"
    android:layout_height="45dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/input_default"
    android:gravity="center_vertical">
    <View 
        android:id="@+id/line2"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:background="@color/gray_line2"/>
    
    <Spinner 
        android:id="@+id/pickuser_sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/line2"
        android:hint="请选择采摘人员"
        android:textColor="@color/item_graytext3"
        android:textSize="13sp"
                android:spinnerMode="dropdown"
                android:popupBackground="@color/white"
                android:background="@drawable/spinner_bg"/>
    <TextView 
        android:id="@+id/pickdate_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/line2"
        android:hint="请选择采摘时间"
        android:textColor="@color/item_graytext3"
        android:textSize="13sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
</RelativeLayout>

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
    <TextView 
        android:id="@+id/text1"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="采摘数量/规格:"
        android:textColor="@color/item_graytext3"
        android:textSize="14sp"/>
    <TextView 
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:background="@drawable/dian"/>
</LinearLayout>
<RelativeLayout 
    android:layout_width="340dp"
    android:layout_height="45dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/input_click"
    android:gravity="center_vertical">
    <View 
        android:id="@+id/line1"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:background="@color/gray_line2"/>
    
    <EditText 
        android:id="@+id/pickcount_et"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/line1"
        android:layout_centerVertical="true"
        android:hint="请输入采摘数量"
        android:textColor="@color/item_graytext4"
        android:textSize="13sp"
        android:background="@drawable/caredit_f"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
    <EditText 
        android:id="@+id/pickformat_et"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/line1"
        android:layout_centerVertical="true"
        android:hint="请输入规格"
        android:textColor="@color/item_graytext4"
        android:textSize="13sp"
        android:background="@drawable/caredit_f"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
</RelativeLayout>
<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginTop="15dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    >
    <TextView 
android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:text="是否生成溯源批次"
android:textColor="@color/item_graytext3"
android:textSize="14sp"
/>
    <ImageView
        android:layout_width="36dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"/>
    
</RelativeLayout>
  <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="备注:"
        android:textColor="@color/item_graytext3"
        android:textSize="14sp"/>
    <TextView 
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:background="@drawable/dian"/>
    
</LinearLayout>
<RelativeLayout 
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/input_click">
  
    <EditText 
        android:id="@+id/remarks_et"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:hint="请填写相关备注信息"
        android:gravity="top|left"
        android:textColor="@color/item_graytext3"
        android:textSize="13sp"
        android:background="@drawable/caredit_f"
        android:padding="10dp"/>
</RelativeLayout>
 
<View 
    android:layout_width="fill_parent"
    android:layout_height="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>