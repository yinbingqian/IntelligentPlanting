<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/gray_bg2">
    
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:background="@color/green_top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="基本信息"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>
 

       <RelativeLayout
        android:id="@+id/modifypassword_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="9dp"
        android:background="@color/white" >
 		<TextView 
 		    android:layout_width="65dp"
 		    android:layout_height="fill_parent"
 		    android:text="修改密码"
 		    android:textColor="@color/item_graytext"
 		    android:textSize="16dp"
 		    android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/next_img"
            android:layout_width="12dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/more"/>
        	
    </RelativeLayout>
           <View 
            android:id="@+id/line2"
            android:background="@color/gray_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            />
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="9dp"
        android:background="@color/white" 
        android:orientation="horizontal">
 		<TextView 
 		    android:layout_width="65dp"
 		    android:layout_height="fill_parent"
 		    android:text="用户名称"
 		    android:textColor="@color/item_graytext"
 		    android:textSize="16dp"
 		    android:gravity="center_vertical"/>

        
        <TextView
            android:id="@+id/username_tv"
            android:layout_centerVertical="true"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:text="188****4038"
            android:textColor="@color/item_graytext"
            android:textSize="16sp" />
        	
   
    </LinearLayout>
     <View 
            android:background="@color/gray_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            />
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="9dp"
        android:background="@color/white" 
        android:orientation="horizontal">
 		<TextView 
 		    android:layout_width="65dp"
 		    android:layout_height="fill_parent"
 		    android:text="手机号码"
 		    android:textColor="@color/item_graytext"
 		    android:textSize="16dp"
 		    android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/phone_tv"
            android:layout_centerVertical="true"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:text="188****4038"
            android:textColor="@color/item_graytext"
            android:textSize="16sp" />
        	
   
    </LinearLayout>
     <View 
            android:background="@color/gray_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            />
           <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="9dp"
        android:background="@color/white" 
        android:orientation="horizontal">
 		<TextView 
 		    android:layout_width="65dp"
 		    android:layout_height="fill_parent"
 		    android:text="邮箱地址"
 		    android:textColor="@color/item_graytext"
 		    android:textSize="16dp"
 		    android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/email_edit"
            android:layout_centerVertical="true"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:hint="请填写"
            android:textColorHint="@color/text_graylight"
            android:background="@null"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/gray_text"
            android:textSize="17sp" />
        	
   
    </LinearLayout>

</LinearLayout>
