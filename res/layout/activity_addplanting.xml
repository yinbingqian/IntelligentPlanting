<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:background="@color/green_top"
        android:orientation="vertical" >
<TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="添加种植"
            android:textColor="@color/white"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/save_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>
      <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="基地名称:"
        android:textColor="@color/item_graytext3"
        android:textSize="14sp"/>
    <TextView 
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:background="@drawable/dian"/>
</LinearLayout>
<RelativeLayout 
    android:layout_width="340dp"
    android:layout_height="45dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical">
  <TextView 
      android:id="@+id/base_tv"
android:layout_width="60dp" 
android:layout_height="25dp"
android:text="地块管理"
android:textColor="@color/white"
android:textSize="12dp"
android:layout_alignParentRight="true"
android:background="@drawable/green_icon"
android:gravity="center"
android:layout_centerVertical="true"
android:visibility="gone"
/>
    <Spinner 
        android:id="@+id/base_sp"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/base_tv"
        android:layout_marginRight="10dp"
        android:hint="请选择基地"
        android:textColor="@color/item_graytext3"
        android:textSize="13sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
                android:popupBackground="@color/white"
                android:background="@drawable/spinner_long_bg"
                android:spinnerMode="dropdown"/>

</RelativeLayout>        
  <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="作物类别:"
        android:textColor="@color/item_graytext3"
        android:textSize="14sp"/>
    <TextView 
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:background="@drawable/dian"/>
</LinearLayout>
<RelativeLayout 
    android:layout_width="340dp"
    android:layout_height="45dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/input_click"
    android:gravity="center_vertical">
  
    <Spinner 
        android:id="@+id/cropcategory_sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:hint="请选择作物类别"
        android:textColor="@color/item_graytext3"
        android:textSize="13sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
                android:popupBackground="@color/white"
                android:background="@drawable/spinner_long_bg"
                android:spinnerMode="dropdown"/>

</RelativeLayout>

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="作物品种/作物名称："
        android:textColor="@color/item_graytext3"
        android:textSize="14sp"/>
    <TextView 
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:background="@drawable/dian"/>
</LinearLayout>
<RelativeLayout 
    android:layout_width="340dp"
    android:layout_height="45dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/input_default"
    android:gravity="center_vertical"
                android:focusable="true"
                android:focusableInTouchMode="true">
    <View 
        android:id="@+id/line2"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:background="@color/gray_line2"/>
    
    <Spinner 
        android:id="@+id/cropvariety_sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/line2"
        android:hint="请选择作物品种"
        android:textColor="@color/item_graytext3"
        android:textSize="13sp"
                android:spinnerMode="dropdown"
                android:popupBackground="@color/white"
                android:background="@drawable/spinner_bg"/>
    
    <EditText 
        android:id="@+id/cropname_et"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/line2"
        android:layout_centerVertical="true"
        android:hint="请输入作物名称"
        android:textColor="@color/item_graytext4"
        android:textSize="13sp"
        android:background="@drawable/caredit_f"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
    
</RelativeLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
    <TextView 
        android:id="@+id/text1"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="种植面积/单位："
        android:textColor="@color/item_graytext3"
        android:textSize="14sp"/>
    <TextView 
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:background="@drawable/dian"/>
</LinearLayout>
<RelativeLayout 
    android:layout_width="340dp"
    android:layout_height="45dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/input_click"
    android:gravity="center_vertical"
                android:focusable="true"
                android:focusableInTouchMode="true">
    <View 
        android:id="@+id/line1"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:background="@color/gray_line2"/>
    
    
    <EditText 
        android:id="@+id/croparea_et"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/line1"
        android:layout_centerVertical="true"
        android:hint="请输入种植面积"
        android:textColor="@color/item_graytext4"
        android:textSize="13sp"
        android:background="@drawable/caredit_f"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
    
    <EditText 
        android:id="@+id/cropunit_et"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/line1"
        android:layout_centerVertical="true"
        android:hint="请输入面积单位"
        android:textColor="@color/item_graytext4"
        android:textSize="13sp"
        android:background="@drawable/caredit_f"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
</RelativeLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="开始时间/结束时间："
        android:textColor="@color/item_graytext3"
        android:textSize="14sp"/>
    <TextView 
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:background="@drawable/dian"/>
</LinearLayout>

<RelativeLayout 
    android:layout_width="340dp"
    android:layout_height="45dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/input_default"
    android:gravity="center_vertical">
    <View 
        android:id="@+id/line3"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:background="@color/gray_line2"/>
    
    <TextView 
        android:id="@+id/date_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/line3"
        android:hint="请选择时间"
        android:textColor="@color/item_graytext3"
        android:textSize="13sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
    <TextView 
        android:id="@+id/enddate_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/line3"
        android:hint="请选择时间"
        android:textColor="@color/item_graytext3"
        android:textSize="13sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
</RelativeLayout>

  <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="备注:"
        android:textColor="@color/item_graytext3"
        android:textSize="14sp"/>
    <TextView 
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:background="@drawable/dian"/>
    
</LinearLayout>
<RelativeLayout 
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/input_click"
                android:focusable="true"
                android:focusableInTouchMode="true">
  
    <EditText 
        android:id="@+id/remarks_et"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:hint="请填写相关备注信息"
        android:gravity="top|left"
        android:textColor="@color/item_graytext3"
        android:textSize="13sp"
        android:background="@drawable/caredit_f"
        android:padding="10dp"/>
</RelativeLayout>
 
<View 
    android:layout_width="fill_parent"
    android:layout_height="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>